<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/portfolioStockCode"
            android:layout_width="115dp"
            android:layout_height="54dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="ABCD56"
            android:textColor="@color/black"
            android:textSize="28sp" />


        <TextView
            android:id="@+id/portfolioStockPrice"
            android:layout_width="160dp"
            android:layout_height="54dp"
            android:layout_marginStart="-19dp"
            android:layout_toEndOf="@id/portfolioStockCode"
            android:gravity="center_vertical"
            android:text="100.000,57$"
            android:textColor="@color/black"
            android:textDirection="rtl"
            android:textSize="26sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/editItem"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="17dp"
            android:layout_toStartOf="@+id/deleteItem"
            android:layout_toEndOf="@+id/portfolioStockPrice"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_edit_24"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/deleteItem"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="11dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_delete_outline_24"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>